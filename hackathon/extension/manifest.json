{
  "manifest_version": 3,
  "name": "Bharati AI Outreach",
  "version": "1.0",
  "description": "A browser extension to manage and monitor Bharati AI email campaigns.",
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Bharati AI",
    "default_popup": "popup.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ]
}